@model MazlaySuperCar.Models.CheckoutViewModel
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

@{
    ViewBag.Title = "Checkout";
    Layout = "_Layout";
    var antiforgeryToken = Antiforgery.GetAndStoreTokens(HttpContextAccessor.HttpContext).RequestToken;
}

<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li>Checkout</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="checkout_page_bg">
    <div class="container">
        <div class="Checkout_section">
            <form asp-controller="Checkout" asp-action="Place" method="post">
                <input type="hidden" name="__RequestVerificationToken" value="@antiforgeryToken" />

                <div class="row">
                    <div class="col-lg-6">
                        <h3>Billing Details</h3>
                        <div class="mb-3">
                            <label>Name</label>
                            <input class="form-control" name="BillingName" required />
                        </div>
                        <div class="mb-3">
                            <label>Address</label>
                            <input class="form-control" name="BillingAddress" required />
                        </div>
                        <div class="mb-3">
                            <label>Email</label>
                            <input class="form-control" type="email" name="BillingEmail" required />
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <h3>Your Order</h3>
                        <div class="order_table table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Total</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model.Lines)
                                {
                                <tr>
                                    <td>@item.Name <strong>Ã— @item.Quantity</strong></td>
                                    <td>@(item.Price * item.Quantity).ToString("C")</td>
                                </tr>
                                }
                                </tbody>
                                <tfoot>
                                <tr>
                                    <th>Order Total</th>
                                    <td><strong>@Model.Total.ToString("C")</strong></td>
                                </tr>
                                </tfoot>
                            </table>
                        </div>

                        <div class="order_button mt-3">
                            <button type="submit" class="btn btn-primary">Place Order</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
<script>
    const connection = new signalR.HubConnectionBuilder()
        .withUrl("/hubs/orders")
        .build();

    connection.start().catch(err => console.error(err.toString()));
</script>
}
